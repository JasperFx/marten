    <ItemGroup>
      <ProjectReference Include="..\Marten.PLv8\Marten.PLv8.csproj" />
      <ProjectReference Include="..\Marten.Testing\Marten.Testing.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Update="*.js">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <EmbeddedResource Include="*.js" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="MarkdownSnippets.MsBuild" Version="24.5.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      </PackageReference>
    </ItemGroup>
